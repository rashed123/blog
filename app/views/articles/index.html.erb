
<h1>Listing Articles </h1>

<%= link_to "add new ", new_article_path %>


<table>

<tr>
	<th>Title</th>
	<th>Text</th>

</tr>

<% @articles.each do |article| %>
	<tr>
		<td> <%= article.title %></td>
		<td> <%= article.text %></td>
		<td> <%= link_to "view", article %></td>
		<td> <%= link_to "edit", edit_article_path(article) %></td>
	</tr>

<% end %>

</table>